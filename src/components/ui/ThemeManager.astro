<!--
  Critical style block to prevent flashing on page load.
  Forces dark mode only.
-->
<style is:inline>
  html {
    --bg: #1c1c1c;
    background-color: var(--bg);
    color-scheme: dark;
  }
</style>

<script is:inline>
  // Force dark mode - simplified theme manager
  ;(function () {
    function applyDarkMode() {
      document.documentElement.classList.remove('light')
      document.documentElement.classList.add('dark')
    }

    // Apply immediately
    applyDarkMode()

    // Re-apply on navigation events to prevent flash
    document.addEventListener('astro:before-preparation', applyDarkMode)
    document.addEventListener('astro:after-swap', applyDarkMode)
    document.addEventListener('astro:page-load', applyDarkMode)
  })()
</script>
