---
import { Image } from 'astro:assets'
import FormattedDate from '@/components/widgets/FormattedDate.astro'
import type { PostListProps } from '@/types'
import { themeConfig } from '@/config'

const { posts } = Astro.props as PostListProps
const { title } = Astro.props
---

{title && <h2 class="heading">{title}</h2>}
<ul>
  {
    posts.map((post) => (
      <li>
        <a href={`/${post.id}/`}>
          <div class={`post-item ${!themeConfig.date.dateOnRight ? 'date-left' : ''}`}>
            {!themeConfig.date.dateOnRight && (
              <p class="date font-features">
                <FormattedDate date={post.data.pubDate} context="list" />
              </p>
            )}
            {post.data.result && (
              <span class="results">{post.data.result}</span>
            )}
            <p class="title">{post.data.title}</p>
            {themeConfig.date.dateOnRight && (
              <div
                class={themeConfig.general.postListDottedDivider ? 'dotted-divider' : 'divider'}
              />
            )}
            {themeConfig.date.dateOnRight && (
              <p class="date font-features">
                <FormattedDate date={post.data.pubDate} context="list" />
              </p>
            )}
          </div>
          {post.data.postImg && (
            <div class="post-img-wrapper">
              <Image
                src={post.data.postImg}
                alt={post.data.title}
                widths={[800, 1200, 1600]}
                sizes="(max-width: 768px) 100vw, 800px"
                class="post-img"
              />
            </div>
          )}
        </a>
      </li>
    ))
  }
</ul>
<div class="placeholder"></div>

<style>
  ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  a {
    color: var(--text-primary);
    display: block;
    text-decoration: none;
    transition: opacity 0.15s ease-out;
  }

  /* mark {
    background-color: #b2ffc5;
    color: var(--text-primary);
    padding: 0 2px;
  } */

  .results {
    margin: 0;
    background-color: var(--mark);
    color: var(--emphasis);
    border: 1px solid var(--code-bg);
    border-radius: 18px;
    /* padding: 0.28125rem 0.375rem; */
    padding: 0.1rem 0.34rem;
    font-size: var(--font-size-s);
    font-weight: var(--font-weight-bold);
    flex-shrink: 0;
    white-space: nowrap;
  }

  @media (hover: hover) and (pointer: fine) {
    ul:hover a {
      opacity: 0.4;
    }

    ul:hover a:hover {
      opacity: 1;
    }

    ul:hover a:hover .divider {
      background-color: var(--text-tertiary);
      opacity: 0.75;
    }
    ul:hover a:hover .dotted-divider {
      color: var(--text-secondary);
    }
    ul:hover a:hover .date {
      color: var(--text-secondary);
      opacity: 1;
    }
  }

  .post-item {
    height: 2.75rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 0.75rem;
  }

  .post-item.date-left {
    justify-content: flex-start;
  }

  .post-item.date-left .title {
    flex: 1 1 auto;
    min-width: 0;
  }

  .post-item.date-left .date {
    margin-right: 0.75rem;
  }

  h2.heading {
    font-size: var(--font-size-l);
    font-weight: var(--font-weight-bold);
    line-height: 1.4;
    margin: 0  0 1rem 0;
  }

  @media (min-width: 768px) {
    h2.heading {
      font-size: 1.3rem;
    }
  }

  .title {
    margin: 0;
    flex-shrink: 1;
    min-width: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .date {
    margin: 0;
    color: var(--text-secondary);
    opacity: 0.75;
    letter-spacing: var(--spacing-s);
    flex-shrink: 0;
    white-space: nowrap;
  }

  .divider {
    flex: 1 1 auto;
    min-width: 2.6rem;
    /* min-width: 0; */
    margin: 0 0.25rem;
    height: 0.5px;
    background-color: var(--border);
  }

  .dotted-divider {
    flex: 1 1 3rem;
    min-width: 3rem;
    max-width: 100%;
    text-align: end;
    letter-spacing: 5px;
    height: 1.675rem;
    overflow: hidden;
    color: var(--text-tertiary);
    opacity: 0.75;
  }

  .dotted-divider::after {
    content: '·····························································································································································';
    pointer-events: none;
  }

  .placeholder {
    height: 3rem;
  }

  .post-img-wrapper {
    width: 100%;
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
    border-radius: 0.5rem;
    overflow: hidden;
    position: relative;
  }

  .post-img-wrapper::before {
    content: '';
    position: absolute;
    inset: 0;
    backdrop-filter: blur(4px);
    -webkit-backdrop-filter: blur(4px);
    background: rgba(28, 28, 28, 0.15);
    opacity: 1;
    transition: opacity 0.3s ease-out;
    pointer-events: none;
    z-index: 1;
  }

  .post-img-wrapper::after {
    content: '';
    position: absolute;
    inset: 0;
    background-image: url('/assets/specklednoise.png');
    background-repeat: repeat;
    opacity: 0.3;
    pointer-events: none;
    z-index: 2;
  }

  @media (hover: hover) and (pointer: fine) {
    a:hover .post-img-wrapper::before {
      opacity: 0;
    }
  }

  @media (max-width: 768px) {
    .post-img-wrapper::before {
      display: none;
    }
  }

  .post-img {
    width: 100%;
    height: 150px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease-out, height 0.3s ease-out, filter 0.3s ease-out;
  }

  @media (hover: hover) and (pointer: fine) {
    .post-img {
      height: 150px;
      /* filter: grayscale(0.8); */
    }

    a:hover .post-img {
      height: 220px;
      transform: scale(1.05);
      /* filter: grayscale(0); */
    }
  }
</style>
