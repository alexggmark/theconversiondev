---
import IndexLayout from '@/layouts/IndexLayout.astro'
import Header from '@/components/layout/Header.astro'
import { themeConfig } from '@/config'
---

<IndexLayout title="Contact" description="Get in touch" hideFooter={true}>
  <div>
    <Header />
  </div>
  <main class="contact-page">
    <h1>Contact me</h1>

    <div class="form-container">
      <!-- Calendly embed will go here -->
    </div>
  </main>
</IndexLayout>

<style>
  .contact-page {
    padding-top: 2rem;
  }

  .contact-page h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
  }

  .form-container {
    min-height: 400px;
  }
</style>
